<UserControl x:Class="CommandEngine.Controls.Windows.Commander"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CommandEngine.Controls.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel x:Name="RootPanel" Margin="5, 0, 5, 0">
        <StackPanel x:Name="ScrollPanelView">
            <ScrollViewer x:Name="CommanderScrollView" VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="PreviousText" TextWrapping="Wrap"/>
            </ScrollViewer>
        </StackPanel>
        <DockPanel x:Name="CommanderPanel">
            <TextBlock x:Name="CurrentLineText" DockPanel.Dock="Left"/>
            <TextBox x:Name="CommanderTextBox" BorderBrush="Transparent" BorderThickness="0" DockPanel.Dock="Right"/>
        </DockPanel>
    </StackPanel>
</UserControl>
